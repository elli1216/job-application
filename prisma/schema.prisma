generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Todo {
  id        Int     @id @default(autoincrement())
  createdAt String? @db.VarChar(250)
  title     String? @db.VarChar
}

model Applications {
  uuid         String            @id @default(uuid())
  company_name String
  job_title    String
  date_applied DateTime
  status       ApplicationStatus @default(To_Apply)
  job_link     String            @default("")
  notes        String            @default("")
  userId       String
  jobTypeId    String
  createdAt    DateTime          @default(now())

  @@index([userId])
  @@index([jobTypeId])
}

model Users {
  uuid      String   @id @default(uuid())
  clerkId   String   @unique
  email     String   @unique
  full_name String?
  createdAt DateTime @default(now())
}

model JobTypes {
  uuid      String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
}

enum ApplicationStatus {
  To_Apply
  Applied
  Interviewing
  Offered
  Rejected
  Accepted
  No_Response
}
